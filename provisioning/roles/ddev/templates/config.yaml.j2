---
name: "{{ name }}"
type: 'php'
docroot: "{{ main_docroot }}"
php_version: "{{ php_version }}"

{% if dbserver == 'mariadb' %}
mariadb_version: "{{ mariadb_version }}"
{% endif %}
{% if dbserver == 'mysql' %}
mysql_version: "{{ mysql_version }}"
{% endif %}

xdebug_enabled: {{ true "xdebug" in extra_software else false }}
webserver_type: "{{ webserver }}-fpm"
timezone: "{{ timezone }}"
composer_version: "{{ composer_version }}"
additional_hostnames: []
additional_fqdns: []

working_dir: "{{ main_docroot }}"

{% if "mailhog" in extra_software %}
mailhog_port: '8025'
mailhog_https_port: '8025'
{% endif %}

webimage_extra_packages: {{ php_packages_extra }}
dbimage_extra_packages: []


project_tld: "{{ main_hostname }}"

hooks:
